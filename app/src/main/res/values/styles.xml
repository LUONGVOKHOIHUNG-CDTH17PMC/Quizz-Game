<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <!--Base TextView theme-->
    <style name="BasicTextViewStyle" parent="Widget.AppCompat.TextView">
        <!-- Size, Location, ..-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">6dp</item>
        <!-- Color, Font.. -->
        <item name="android:fontFamily">@font/aldrich</item>
        <item name="android:color">@color/black</item>
        <item name="android:textColor">@color/black</item>


    </style>
    <style name="ImageViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:scaleType">fitCenter</item>
    </style>
    <!-- Style of ImageView Heart -->
    <style name="ImgHeart" parent="ImageViewStyle">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_heart</item>
    </style>
    <style name="ImgSupport" parent="ImageViewStyle">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/button_red</item>
        <item name="android:layout_marginEnd">15dp</item>

    </style>

    <style name="tvKhongKhung" parent="BasicTextViewStyle">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="tvTitle" parent="BasicTextViewStyle">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="tvContent" parent="BasicTextViewStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="TVCauHoi" parent="BasicTextViewStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:gravity">left|center</item>
    </style>
    <style name="BasicHinhTronStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/circle</item>
    </style>


<!--Basic Style Theme cho Button-->

    <style name="BasicStyleButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:translationZ">15dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/aldrich</item>
    </style>
    <style name="btnRed" parent="BasicStyleButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_red</item>
    </style>
    <style name="btnAnswer" parent="btnRed">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="btnBlack" parent="btnRed">
        <item name="android:background">@drawable/button_black</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>
    <!-- Basic Style EditText -->
    <style name="BasicStyleEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/input</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/aldrich</item>

    </style>
    <style name="edtName" parent="BasicStyleEditText">
        <item name="android:inputType">textPersonName</item>
    </style>
    <style name="edtPass" parent="BasicStyleEditText">
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="edtEmail" parent="BasicStyleEditText">
        <item name="android:inputType">textEmailAddress</item>
    </style>

</resources>
