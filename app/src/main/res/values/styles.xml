<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <!--Base TextView theme-->
    <style name="BasicTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/aldrich</item>
        <item name="android:color">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">6dp</item>
    </style>
    <style name="ImageViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_heart</item>
    </style>
    <style name="TVCauHoi" parent="BasicTextViewStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:gravity">left|center</item>
    </style>
    <style name="BasicHinhTronStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/circle</item>
    </style>


<!--Basic Style Theme cho Button-->
    <style name="btnTraLoi" parent="Widget.AppCompat.Button">
        <item name="android:translationZ">15dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/aldrich</item>
    </style>
    <style name="btnA" parent="btnTraLoi">
        <item name="android:contentDescription">A.</item>
    </style>
    <style name="btnB" parent="btnTraLoi">
        <item name="android:contentDescription">B.</item>
    </style>
    <style name="btnC" parent="btnTraLoi">
        <item name="android:contentDescription">C.</item>
    </style>
    <style name="btnD" parent="btnTraLoi">
        <item name="android:contentDescription">C.</item>
    </style>

</resources>
