<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>


    <style name="BaseAppTheme" parent="android:Theme.Material">
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform</item>
    </style>
    <!--Base TextView theme-->
    <style name="BasicTextViewStyle" parent="Widget.AppCompat.TextView">
        <!-- Size, Location, ..-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>


        <!-- Color, Font.. -->
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:color">@color/black</item>
        <item name="android:textColor">@color/black</item>


    </style>
    <style name="ImageViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:scaleType">fitCenter</item>
    </style>
    <!-- Style of ImageView Heart -->
    <style name="ImgHeart" parent="ImageViewStyle">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:backgroundTintMode">add</item>
        <item name="android:src">@drawable/ic_heart</item>
    </style>
    <style name="ImgSupport" parent="ImageViewStyle">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/button_red</item>
        <item name="android:layout_marginEnd">15dp</item>

    </style>

    <style name="tvRegular" parent="BasicTextViewStyle">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="tvTitle" parent="BasicTextViewStyle">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--Style TextView Content
    Small
    Regular
    Medium
    Question
    Answer
    -->
    <style name="tvContentMedium" parent="BasicTextViewStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="tvContentSmall" parent="BasicTextViewStyle">
        <item name="android:textSize">12dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tvQuestion" parent="BasicTextViewStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/button_white_red</item>
        <item name="android:gravity">left|center</item>
        <item name="android:padding">13dp</item>
    </style>
    <style name="BasicHinhTronStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/circle</item>
    </style>


<!--Basic Style Theme cho Button-->

    <style name="BasicStyleButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:translationZ">15dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>
    <style name="btnRed" parent="BasicStyleButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:background">@drawable/button_red</item>
    </style>
    <style name="btnAnswer" parent="btnRed">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="btnBlack" parent="btnRed">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>
    <!-- Basic Style EditText -->
    <style name="BasicStyleEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/input</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/regular</item>

    </style>
    <style name="edtName" parent="BasicStyleEditText">
        <item name="android:inputType">textPersonName</item>
    </style>
    <style name="edtPass" parent="BasicStyleEditText">
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="edtEmail" parent="BasicStyleEditText">
        <item name="android:inputType">textEmailAddress</item>
    </style>

</resources>
