<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LinhVucActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/black"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    style="@style/BasicTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Yukihuy"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    style="@style/BasicTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="40dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"

                    android:src="@drawable/small_diamond" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    style="@style/ImageViewStyle"
                    android:src="@drawable/ic_heart_full" />

                <ImageView
                    android:id="@+id/imageView5"
                    style="@style/ImageViewStyle"
                    android:src="@drawable/ic_heart_full" />

                <ImageView
                    android:id="@+id/imageView11"
                    style="@style/ImageViewStyle" />

                <ImageView
                    android:id="@+id/imageView12"
                    style="@style/ImageViewStyle" />

                <ImageView
                    android:id="@+id/imageView13"
                    style="@style/ImageViewStyle" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView13"
            style="@style/BasicTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Điểm: 5000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCauHoi"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="16dp"
                android:background="@drawable/circle"
                android:fontFamily="@font/michroma"
                android:gravity="center"
                android:text="15"
                android:textColor="@color/red"
                android:textSize="50dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvThoiGian"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button"
                android:fontFamily="@font/michroma"
                android:gravity="center"
                android:text="30"
                android:textColor="@color/red"
                android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/btnToan"
                style="@style/btnA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="toán"
                android:onClick="btnLevel_click"/>

            <Button
                android:id="@+id/btnHoa"
                style="@style/btnB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hóa"
                android:onClick="btnLevel_click"/>

            <Button
                android:id="@+id/btnVan"
                style="@style/btnC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Văn"
                android:onClick="btnLevel_click"/>

            <Button
                android:id="@+id/btnLichSu"
                style="@style/btnD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lịch sữ"
                android:onClick="btnLevel_click"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_start_color"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/imageView8"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="50dp"
                android:background="@drawable/percent" />

            <ImageButton
                android:id="@+id/imageView9"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_marginEnd="50dp"
                app:srcCompat="@drawable/ic_phone" />

            <ImageButton
                android:id="@+id/imageView15"
                android:layout_width="47dp"
                android:layout_height="47dp"
                app:srcCompat="@drawable/ic_group" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/black"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                style="@style/BasicTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Yukihuy"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                style="@style/BasicTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_gravity="center"

                android:src="@drawable/small_diamond" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView10"
                style="@style/ImageViewStyle"
                android:src="@drawable/ic_heart_full" />

            <ImageView
                android:id="@+id/imageView5"
                style="@style/ImageViewStyle"
                android:src="@drawable/ic_heart_full" />

            <ImageView
                android:id="@+id/imageView11"
                style="@style/ImageViewStyle" />

            <ImageView
                android:id="@+id/imageView12"
                style="@style/ImageViewStyle" />

            <ImageView
                android:id="@+id/imageView13"
                style="@style/ImageViewStyle" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>