<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LinhVucActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout"></include>

        <TextView
            android:id="@+id/textView13"
            style="@style/BasicTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Điểm: 5000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCauHoi"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:background="@drawable/circle"
            android:fontFamily="@font/michroma"
            android:gravity="center"
            android:text="15"
            android:textColor="@color/red"
            android:textSize="50dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/btnToan"
                style="@style/btnAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnLevel_click"
                android:text="toán" />

            <Button
                android:id="@+id/btnHoa"
                style="@style/btnAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnLevel_click"
                android:text="hóa" />

            <Button
                android:id="@+id/btnVan"
                style="@style/btnAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnLevel_click"
                android:text="Văn" />

            <Button
                android:id="@+id/btnLichSu"
                style="@style/btnAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnLevel_click"
                android:text="lịch sữ" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/black"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                style="@style/BasicTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Yukihuy"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                style="@style/BasicTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_gravity="center"

                android:src="@drawable/small_diamond" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView10"
                style="@style/ImageViewStyle"
                android:src="@drawable/ic_heart_full" />

            <ImageView
                android:id="@+id/imageView5"
                style="@style/ImageViewStyle"
                android:src="@drawable/ic_heart_full" />

            <ImageView
                android:id="@+id/imageView11"
                style="@style/ImageViewStyle" />

            <ImageView
                android:id="@+id/imageView12"
                style="@style/ImageViewStyle" />

            <ImageView
                android:id="@+id/imageView13"
                style="@style/ImageViewStyle" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>