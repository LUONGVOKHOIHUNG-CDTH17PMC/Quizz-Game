<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
              >

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/black"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        style="@style/BasicTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Yukihuy"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/red"
                    >

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        style="@style/BasicTextViewStyle"/>

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="40dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"

                        android:src="@drawable/small_diamond"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView10"
                        style="@style/ImageViewStyle"
                        android:src="@drawable/ic_heart_full" />

                    <ImageView
                        android:id="@+id/imageView5"
                        style="@style/ImageViewStyle"
                        android:src="@drawable/ic_heart_full" />

                    <ImageView
                        android:id="@+id/imageView11"
                        style="@style/ImageViewStyle" />

                    <ImageView
                        android:id="@+id/imageView12"
                        style="@style/ImageViewStyle" />

                    <ImageView
                        android:id="@+id/imageView13"
                        style="@style/ImageViewStyle" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Điểm: 5000"
                android:textSize="25dp"
                android:textStyle="bold"
                style="@style/BasicTextViewStyle"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/circle"
                    android:fontFamily="@font/michroma"
                    android:gravity="center"
                    android:text="15"
                    android:layout_margin="16dp"
                    android:textColor="@color/red"
                    android:textSize="50dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button"
                    android:fontFamily="@font/michroma"
                    android:gravity="center"
                    android:text="30"
                    android:textColor="@color/red"
                    android:textSize="20dp" />
            </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                style="@style/TVCauHoi"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Vị vua đầu tiên của nước Việt Nam?Vị vua đầu tiên của nước Việt Nam?" />

            <Button
                android:id="@+id/button12"
                style="@style/btnA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/michroma"
                android:text="Đáp án A" />

            <Button
                android:id="@+id/button13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button"
                style="@style/btnB"/>

            <Button
                android:id="@+id/button14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/michroma"
                android:text="Button"
                style="@style/btnC"/>

            <Button
                android:id="@+id/button15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button"
                style="@style/btnD"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_shadow_start_color"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/imageView8"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="50dp"
                    android:background="@drawable/percent" />

                <ImageButton
                    android:id="@+id/imageView9"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:layout_marginEnd="50dp"
                    app:srcCompat="@drawable/ic_phone" />

                <ImageButton
                    android:id="@+id/imageView15"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    app:srcCompat="@drawable/ic_group" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>