<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.LoginActivity"
   >

    <LinearLayout
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:text="Đăng nhập"
            style="@style/tvTitle" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="162dp"
            android:layout_height="120dp"
            style="@style/ImageViewStyle"
            app:srcCompat="@drawable/iconfinder_people_3336938" />
        <EditText
            android:id="@+id/etUsername"
            style="@style/edtName"
            android:hint="Nhập tên tài khoản"
            />
        <EditText
            android:id="@+id/edtPassword"
            style="@style/edtPass"
            android:hint="Nhập mật khẩu"
            />

        <CheckBox
            android:id="@+id/cbxShowPassword"
            android:backgroundTint="@color/red"
            android:backgroundTintMode="add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hiển thị mật khẩu" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            style="@style/btnAnswer"
            android:text="Đăng nhập"
            android:background="@drawable/button"


          />

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/iconfinder_google_plus" />

                <Button
                    android:id="@+id/btnLoginGoogle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bold"
                    android:text="Đăng nhập với Goolge"
                    android:background="#F44336"
                    android:textColor="@color/white"
                    android:onClick="onClickRegister"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/iconfinder_facebook_986944" />

                <Button
                    android:id="@+id/btnLoginFacebook"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#3F51B5"
                    android:fontFamily="@font/bold"
                    android:text="Đăng nhập với Facebook"
                    android:textColor="@color/white"
                    android:onClick="onClickRegister"
                     />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/titleRestore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tvContentMedium"
            android:layout_margin="0dp"
            android:text="Quên mật khẩu ?"
            android:onClick="onClickRegister"

            />
        <TextView
            android:id="@+id/titleRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng kí"
            style="@style/tvContentMedium"
            android:textColor="@color/red"
            android:layout_margin="0dp"
            android:textStyle="bold"
            android:onClick="onClickRegister"

            />

    </LinearLayout>

</RelativeLayout>